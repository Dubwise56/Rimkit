<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>SalvagedComponent</defName>
    <label>Salvaged Component</label>
    <description>Damaged components that can be repaired at machining and component tables.</description>
    <graphicData>
      <texPath>Things/Item/SalvagedComponent</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>21</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>

  <ThingDef>
    <defName>DubUnfinishedApparel</defName>
    <graphicData>
      <texPath>Things/Item/Unfinished/UnfinishedApparel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>UnfinishedThing</thingClass>
    <category>Item</category>
    <label>unfinished thing</label>
    <altitudeLayer>Item</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <isUnfinishedThing>true</isUnfinishedThing>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <selectable>true</selectable>
    <tradeability>Never</tradeability>
    <drawerType>RealtimeOnly</drawerType>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <DeteriorationRate>2.0</DeteriorationRate>
      <Beauty>-6</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <thingCategories>
      <li>Unfinished</li>
    </thingCategories>
  </ThingDef>


  <ThingDef Name="dubsApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <generateAllowChance>0</generateAllowChance>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-6</Beauty>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
  </ThingDef>

  <ThingDef Name="dubsApparelMakeableBase" ParentName="dubsApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>DubUnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="dubsApparelMakeableBase">
    <defName>DubsRepairKit</defName>
    <thingClass>Dubs_Rimkit.GenericKit</thingClass>
    <label>Repair Kit</label>
    <description>Allows the wearer to salvage parts from broken down buildings while fixing them, success rate is based on skill, also increases construction stats.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/RepairKit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <MarketValue>1500</MarketValue>
      <Mass>3</Mass>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.06</MoveSpeed>
      <ConstructionSpeed>0.12</ConstructionSpeed>
      <ConstructSuccessChance>0.12</ConstructSuccessChance>
      <FixBrokenDownBuildingSuccessChance>0.12</FixBrokenDownBuildingSuccessChance>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Steel>20</Steel>
    </costList>
    <apparel>
      <tags>
        <li>MedicalKit</li>
      </tags>
    </apparel>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>


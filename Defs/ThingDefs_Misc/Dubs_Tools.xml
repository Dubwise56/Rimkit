  <ThingDef ParentName="BaseTool">
    <defName>Hammer</defName>
    <label>hammer</label>
    <description>Helps you construct stuff faster.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/hammer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <soundInteract>InteractPistol</soundInteract>
    <costStuffCount>50</costStuffCount>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <MeleeWeapon_DamageAmount>10</MeleeWeapon_DamageAmount>
      <MeleeWeapon_Cooldown>2.2</MeleeWeapon_Cooldown>
      <Mass>1</Mass>
    </statBases>
    <equippedStatOffsets>
      <ConstructionSpeed>0.06</ConstructionSpeed>
      <ConstructSuccessChance>0.06</ConstructSuccessChance>
      <FixBrokenDownBuildingSuccessChance>0.06</FixBrokenDownBuildingSuccessChance>
    </equippedStatOffsets>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <meleeDamageDef>Blunt</meleeDamageDef>
      </li>
    </verbs>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
      <defaultIngredientFilter>
        <thingDefs>
          <li>Steel</li>
        </thingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>


  <ThingDef ParentName="BaseTool">
    <defName>Power_Drill</defName>
    <label>power drill</label>
